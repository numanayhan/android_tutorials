<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/relativeLayoutId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">

        <Button
            android:id="@+id/textId"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="105dp"
            android:text="Text" />

        <Button
            android:id="@+id/buttonId"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textId"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="105dp"
            android:text="Buttons" />

        <Button
            android:id="@+id/widgetId"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonId"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="105dp"
            android:text="Widgets" />

        <Button
            android:id="@+id/layoutsId"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/widgetId"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="105dp"
            android:text="Layouts" />

        <Button
            android:id="@+id/containersId"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutsId"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="105dp"
            android:text="Containers" />

        <Button
            android:id="@+id/googleId"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/containersId"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="105dp"
            android:text="Google" />

        <Button
            android:id="@+id/legacyId"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/googleId"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="105dp"
            android:text="Legacy" />

    </RelativeLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval" >
            <gradient
                android:endColor="@android:color/transparent"
                android:gradientRadius="30"
                android:startColor="@android:color/transparent" />
            <solid android:color="@color/tab_item_selected" />
            <stroke
                android:width="1dp"
                android:color="@color/tab_item_selected" />

            <size
                android:height="70dp"
                android:width="70dp" />
        </shape>
    </item>
    <item android:gravity="center" android:drawable="@drawable/dashboard" android:state_checked="false" />
</layer-list>